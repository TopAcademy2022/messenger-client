@page
@model messenger_client.Pages.LoginModel
@{
	ViewData["Title"] = "Login";
}

<div class="row">
	<div class="col-4"></div>
	<form class="col-4 mt-3 p-5 needs-validation bg-light rounded">
		<h1 class="col-12 text-center">Sing In</h1>
		<div class="col-12 mb-3">
			<label for="validationLogin" class="form-label">Username</label>
			<input type="text" class="form-control" id="validationLogin" required>
		</div>
		<div class="col-12 mb-3">
			<label for="validationPassword" class="form-label">Password</label>
			<input type="password" class="form-control" id="validationPassword" required>
		</div>
		<button class="col-12 mt-3 mb-5 btn btn-primary" type="submit">Login</button>
		<h5 class="col-12 mt-3 text-center">Or using Sing Up</h5>
		<div class="row">
			<div class="col-4"></div>
			<button class="col-4 btn btn-info" type="button">Registration</button>
		</div>
	</form>
</div>

<script>
	document.addEventListener("DOMContentLoaded", () => {
		let mainContainer = document.getElementById("main");

		if (mainContainer != null || mainContainer != undefined)
		{
			mainContainer.classList.add("bg-primary");
			mainContainer.classList.add("bg-gradient");
		}
	});
</script>